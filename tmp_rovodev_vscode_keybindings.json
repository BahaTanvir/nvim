[
  // === STANDARD VIM NAVIGATION ===
  // Using standard h/j/k/l for consistency
  {
    "key": "ctrl+h",
    "command": "workbench.action.navigateLeft",
    "when": "!neovim.mode"
  },
  {
    "key": "ctrl+j",
    "command": "workbench.action.navigateDown", 
    "when": "!neovim.mode"
  },
  {
    "key": "ctrl+k",
    "command": "workbench.action.navigateUp",
    "when": "!neovim.mode"
  },
  {
    "key": "ctrl+l",
    "command": "workbench.action.navigateRight",
    "when": "!neovim.mode"
  },

  // === FILE OPERATIONS (matching common Neovim patterns) ===
  {
    "key": "ctrl+p",
    "command": "workbench.action.quickOpen"
  },
  {
    "key": "ctrl+shift+p",
    "command": "workbench.action.showCommands"
  },
  {
    "key": "ctrl+shift+f",
    "command": "workbench.action.findInFiles"
  },
  {
    "key": "ctrl+shift+e",
    "command": "workbench.view.explorer"
  },

  // === TERMINAL (matching your terminal config) ===
  {
    "key": "ctrl+`",
    "command": "workbench.action.terminal.toggleTerminal"
  },
  {
    "key": "ctrl+shift+`",
    "command": "workbench.action.terminal.new"
  },
  {
    "key": "alt+h",
    "command": "workbench.action.terminal.focusPrevious",
    "when": "terminalFocus"
  },
  {
    "key": "alt+l",
    "command": "workbench.action.terminal.focusNext", 
    "when": "terminalFocus"
  },

  // === EDITOR TABS ===
  {
    "key": "ctrl+w h",
    "command": "workbench.action.previousEditor"
  },
  {
    "key": "ctrl+w l",
    "command": "workbench.action.nextEditor"
  },
  {
    "key": "ctrl+w q",
    "command": "workbench.action.closeActiveEditor"
  },

  // === SPLITS (Neovim-style) ===
  {
    "key": "ctrl+w v",
    "command": "workbench.action.splitEditor"
  },
  {
    "key": "ctrl+w s",
    "command": "workbench.action.splitEditorDown"
  },

  // === LSP/CODE ACTIONS (when not in Neovim mode) ===
  {
    "key": "g d",
    "command": "editor.action.revealDefinition",
    "when": "!neovim.mode && editorTextFocus"
  },
  {
    "key": "g r",
    "command": "editor.action.goToReferences",
    "when": "!neovim.mode && editorTextFocus"
  },
  {
    "key": "g i",
    "command": "editor.action.goToImplementation",
    "when": "!neovim.mode && editorTextFocus"
  },
  {
    "key": "K",
    "command": "editor.action.showHover",
    "when": "!neovim.mode && editorTextFocus"
  },

  // === DEBUGGING ===
  {
    "key": "f5",
    "command": "workbench.action.debug.start"
  },
  {
    "key": "f9",
    "command": "editor.debug.action.toggleBreakpoint"
  },
  {
    "key": "f10",
    "command": "workbench.action.debug.stepOver"
  },
  {
    "key": "f11",
    "command": "workbench.action.debug.stepInto"
  },

  // === GIT (matching common Git workflows) ===
  {
    "key": "ctrl+shift+g",
    "command": "workbench.view.scm"
  },
  {
    "key": "ctrl+k ctrl+c",
    "command": "git.commitStaged"
  },
  {
    "key": "ctrl+k ctrl+p",
    "command": "git.push"
  },

  // === DISABLE CONFLICTING DEFAULTS ===
  {
    "key": "ctrl+w",
    "command": "-workbench.action.closeWindow"
  },
  {
    "key": "ctrl+k",
    "command": "-workbench.action.showAllSymbols"
  },
  {
    "key": "ctrl+s",
    "command": "workbench.action.files.save"
  }
]